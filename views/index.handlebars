<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類，若需多關鍵字搜尋可使用「,」來區隔"
            aria-label="Restaurant Name..." aria-describedby="search-button" value="{{keyword}}">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row ">
    <div class="col-md-10 col-12 mx-auto">
      <div class="d-flex justify-content-end">
        <a href="/create" class="btn btn-info">Create</a>
      </div>
      
      <div class="row row-cols-1 row-cols-md-3">

        {{#each restaurants}}
        <div class="mb-5">
          <a href="/restaurants/{{this._id}}" class="col text-secondary">
            <div class="card mb-1">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
            </div>
          </a>
          <div class="d-flex justify-content-end">
            <a href="/restaurants/{{this._id}}/edit" class="btn btn-link mr-3">Edit</a>
            <a href="/restaurants/{{this._id}}" class="btn btn-link mr-3">Detail</a>
            <form action="/restaurants/{{this._id}}/delete" method="POST">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>